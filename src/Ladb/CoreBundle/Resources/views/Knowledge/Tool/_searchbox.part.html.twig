{% extends 'LadbCoreBundle:Core/Search:_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.tools'|trans() %}
{% set searchPath = path('core_tool_list') %}
{% set masonry = true %}

{% block filtersDropdown %}
    <li class="hidden"><a class="ladb-smartsearch-facet" data-type="filter" data-name="name" data-label="Nom générique" data-editable="true" data-icon="filter"><i class="ladb-icon-filter"></i> Nom générique</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="brand" data-label="Marque" data-editable="true" data-icon="filter"><i class="ladb-icon-filter"></i> Marque</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="family" data-label="Famille" data-editable="true" data-icon="filter" data-proposals="Outil à main,Outil de mesure,Electroportatif,Machine stationnaire,Machine semi-stationnaire,Gabarit"><i class="ladb-icon-filter"></i> Famille</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="utilization" data-label="Utilisation" data-editable="true" data-icon="tool"><i class="ladb-icon-tool"></i> Utilisation</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="with-manual" data-label="Avec notice" data-editable="false" data-icon="file"><i class="ladb-icon-file"></i> Avec notice</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="with-review" data-label="Avec avis" data-editable="false" data-icon="review"><i class="ladb-icon-review"></i> Avec avis</a></li>
    <li class="divider{% if not is_granted('ROLE_USER') %} hidden{% endif %}"></li>
    <li{% if not is_granted('ROLE_USER') %} class="hidden"{% endif %}><a class="ladb-smartsearch-facet" data-type="filter" data-name="rejected" data-label="Rejetés" data-icon="thumb-down"><i class="ladb-icon-thumb-down"></i> Rejetés</a></li>
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récents" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récents</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-alphabetical" data-label="Alphabétique" data-unique="true" data-default-order="asc" data-icon="sort"><i class="ladb-icon-sort"></i> Alphabétique</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-views" data-label="Plus vus" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus vus</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférés" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-comments" data-label="Plus commentés" data-unique="true" data-icon="comment"><i class="ladb-icon-comment"></i> Plus commentés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-rating" data-label="Mieux notés" data-unique="true" data-icon="review"><i class="ladb-icon-review"></i> Mieux notés</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
    {% if is_granted('ROLE_USER') %}
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-completion" data-label="Remplissage" data-unique="true" data-icon="percent"><i class="ladb-icon-percent"></i> Remplissage</a></li>
    {% endif %}
{% endblock %}

{% block searchboxShortcuts %}
    <li><a class="ladb-smartsearch-shortcut" data-query='@family:"Outil à main"'><i class="ladb-icon-hand"></i> Outil à main</a></li>
    <li><a class="ladb-smartsearch-shortcut" data-query='@family:Electroportatif'><i class="ladb-icon-addon"></i> Electroportatif</a></li>
    <li><a class="ladb-smartsearch-shortcut" data-query='@family:"Machine stationnaire"'><i class="ladb-icon-weight"></i> Machine stationnaire</a></li>
{% endblock %}
