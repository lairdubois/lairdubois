{% extends 'LadbCoreBundle:Core/Search:_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.woods'|trans() %}
{% set searchPath = path('core_wood_list') %}
{% set masonry = true %}

{% block filtersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="origin" data-label="Provenance" data-editable="true" data-icon="globe"><i class="ladb-icon-globe"></i> Provenance</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="utilization" data-label="Utilisation" data-editable="true" data-icon="creation"><i class="ladb-icon-creation"></i> Utilisation</a></li>
    {% if app.user %}
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="rejected" data-label="Rejetées" data-icon="thumb-down"><i class="ladb-icon-thumb-down"></i> Rejetées</a></li>
    {% endif %}
    {# Hidden filters #}
    <li class="hidden"><a class="ladb-smartsearch-facet" data-type="filter" data-name="name" data-label="Nom français" data-editable="true" data-icon="filter"><i class="ladb-icon-filter ladb-icon-fixed-center"></i> Nom français</a></li>
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récentes" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récentes</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-alphabetical" data-label="Alphabétique" data-unique="true" data-default-order="asc" data-icon="sort"><i class="ladb-icon-sort"></i> Alphabétique</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-views" data-label="Plus vues" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus vues</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférées" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférées</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-comments" data-label="Plus commentées" data-unique="true" data-icon="comment"><i class="ladb-icon-comment"></i> Plus commentées</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-density" data-label="Plus denses" data-unique="true" data-icon="weight"><i class="ladb-icon-weight"></i> Plus denses</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-completion" data-label="Remplissage" data-unique="true" data-icon="percent"><i class="ladb-icon-percent"></i> Remplissage</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
{% endblock %}

{% block searchboxShortcutsOuter %}{% endblock %}