{% extends 'LadbCoreBundle:Knowledge/School:_form.html.twig' %}

{% set pageTitle = 'knowledge.school.new'|trans() %}
{% set formAction = path('core_school_create') %}
{% set hideWarning = hideWarning|default(false) %}

{% block sidenavHeading %}
    <i class="ladb-icon-plus"></i> {{ 'knowledge.school.new'|trans() }}
{% endblock %}

{% block form_buttons %}
    {% include 'LadbCoreBundle:Common:_form-btn-loading.part.html.twig' with { 'text':('default.save'|trans()), 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% if not hideWarning %}
        {% include 'LadbCoreBundle:Common:_new-warning-modal.part.html.twig' with { 'id':'warning_school_modal', 'title':('knowledge.school.new'|trans()), 'textTransKey':'knowledge.school.new_warning', 'cancelPath':'core_school_list' } %}
    {% endif %}
{% endblock %}

{% block bodyJavascripts %}
    {{ parent() }}
    {% if not hideWarning %}
        <script>
            $(document).ready(function() {
                $("#warning_school_modal").modal();
            });
        </script>
    {% endif %}
{% endblock %}

