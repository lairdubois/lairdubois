{% extends 'LadbCoreBundle:Common:Layout/_list.html.twig' %}

{% use 'LadbCoreBundle:Common:map.blocks.html.twig' %}

{% set pageTitle = 'knowledge.provider.list'|trans() %}
{% set pageDescription = 'knowledge.provider.description'|trans() %}
{% set pageImage = asset('banner-providers-600x376.jpg') %}
{% set pageSectionUrl = url('core_provider_list') %}
{% set pageSectionName = 'knowledge.provider.list'|trans %}

{% set navSection = 'providers' %}
{% set masonry = true %}
{% set masonryWide = true %}
{% set topbarTranslucent = true %}
{% set hideHeaderContainer = false %}
{% set countableEntityList = true %}

{% block headStylesheets %}
    {{ parent() }}
    {{ block('mapAreaStylesheets') }}
{% endblock %}

{% block bodyJavascripts %}
    {{ parent() }}
    {{ block('mapAreaJavascripts') }}
{% endblock %}

{% block bodyHeaderContainer %}
    {% include 'LadbCoreBundle:Common:_map-area.part.html.twig' with { 'classes':'ladb-map-banner'} %}
    {{ parent() }}
{% endblock %}

{% block bodyHeaderContainerContent %}
    {% include 'LadbCoreBundle:Knowledge/Provider:_list-topbar.part.html.twig' %}
{% endblock %}

{% block bodyContainerContent %}
    <div class="panel panel-default ladb-margin-remove ladb-margin-top ladb-hidden-mobile">
        <div class="panel-body">
            Cet <a href="{{ path('core_faq_question_show', { 'id':'qu-est-ce-que-l-annuaire-fournisseurs' }) }}">annuaire</a> est complété et contrôlé collaborativement par la communauté. Si vous détectez des erreurs ou des manques, <a href="{{ path('core_faq_question_show', { 'id':'comment-contribuer-aux-contenus-collaboratifs' }) }}">apportez vos propositions</a> !
        </div>
    </div>
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'LadbCoreBundle:Knowledge/Provider:_list-n.part.html.twig' %}
{% endblock %}
