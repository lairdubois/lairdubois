
{# set entity #}
{# set actorUser #}
{# set subtitle (facutative) #}

<tr>
    {% if entity.mainPicture is defined %}
        <td height="74" width="74">
            <a href="{{ ladb_entity_url_action(entity, 'show') }}" style="color: #333;" target="_blank">
                <img src="{{ (entity.mainPicture is empty ? 'avatar.png' : entity.mainPicture.webPath)|imagine_filter('64x64o') }}" width="64" height="64" style="border: 1px solid #ccc; background-color: #fff; padding: 4px;" alt="{{ entity.title|raw }}">
            </a>
        </td>
    {% endif %}
    <td>
        <a href="{{ ladb_entity_url_action(entity, 'show') }}" style="font-size: 130%; font-weight: bold; color: #f77f00; text-decoration: none;" target="_blank">{{ entity.title }}</a>{% if subtitle is defined and subtitle is not empty %}&nbsp;<span style="color: #999; font-size: 90%;">({{ subtitle }})</span>{% endif %}
        {% if entity.user is defined %}
            <p style="margin:5px 0 0 0; font-size: 90%">{{ 'default.by'|trans() }}&nbsp;<a href="{{ url('core_user_show', { 'username':entity.user.usernameCanonical }) }}" style="color: #f77f00; text-decoration: none;">{{ entity.user.displayname }}</a></p>
        {% endif %}
    </td>
</tr>
