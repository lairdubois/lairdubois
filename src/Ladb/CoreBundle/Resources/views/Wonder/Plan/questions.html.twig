{% extends 'LadbCoreBundle:Common:Layout/_list.html.twig' %}

{% set pageUrl = url('core_plan_questions', { 'id':plan.id }) %}
{% set pageTitle = 'Questions associées à '~plan.title %}
{% set pageDescription = 'Questions associées au plan' %}

{% set navSection = 'plans' %}

{% set masonry = true %}
{% set masonryWide = true %}
{% set hideHeaderContainer = false %}

{% block bodyHeaderContainerContent %}
    {% include 'LadbCoreBundle:Common/Header:_entity-header.part.html.twig' with { 'entity':plan } %}
{% endblock %}

{% block bodyContainerContent %}
    {% if questions.count == 0 %}
        <div class="alert alert-info">
            Aucune question n'est associée à ce plan.
        </div>
    {% else %}
        <div class="panel panel-default ladb-margin-remove ladb-margin-top">
            <div class="panel-body">
                Liste des question recencées par <a href="{{ path('core_user_show', { 'username':plan.user.usernameCanonical }) }}">{{ plan.user.displayname }}</a> pour aide à la réalisation de la création <a href="{{ ladb_entity_url_action(plan) }}">{{ plan.title }}</a>.
            </div>
        </div>
        {% embed 'LadbCoreBundle:Qa/Question:_list-filterbar.part.html.twig' %}
            {% set filterPath = 'core_plan_questions_filter' %}
            {% set filterPathParameters = { 'id':plan.id } %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">{{ plan.questionCount }} {{ 'qa.question.choice.entities'|transchoice(plan.questionCount) }}</span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'LadbCoreBundle:Qa/Question:_list-n.part.html.twig' %}
{% endblock %}