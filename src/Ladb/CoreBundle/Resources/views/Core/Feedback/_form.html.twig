{% form_theme form 'LadbCoreBundle:Common:_form-theme.twig.twig' 'LadbCoreBundle:Core/Block:_form-theme.html.twig' %}

<div class="ladb-feedback-form">
    <div class="ladb-box">
        <div class="ladb-box-inner">
            <h4>{% block title %}{% endblock %}</h4>
            {% block formOuter %}
                {{ form_start(form, { 'action':formAction, 'method':'POST', 'attr':{ 'novalidate':'novalidate' } }) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <label>Titre<span class="ladb-mandatory">*</span></label>
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title, { 'attr':{ 'class':'form-control' } }) }}
                    </div>
                    {{ form_errors(form) }}
                    <label>Votre retour<span class="ladb-mandatory">*</span></label>
                    {% include 'LadbCoreBundle:Core/Block:_form-section-body-inner.part.html.twig' with { 'hideFaqHelp':true } %}
                    <div class="ladb-margin-top">
                        {% block buttons %}
                            <button class="btn btn-default ladb-btn-cancel">{{ 'default.cancel'|trans() }}</button>
                        {% endblock %}
                    </div>
                {{ form_end(form) }}
            {% endblock %}
        </div>
    </div>
</div>
