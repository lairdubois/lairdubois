{% extends 'LadbCoreBundle:Core/Notification:_email.html.twig' %}

{# set row #}

{% block rowContent %}
    <p style="margin: 5px 0 5px 0;">
        <strong>{{ row.actorUser.displayname }}</strong> vous invite Ã  devenir membre du collectif <em>{{ row.invitation.team.displayName }}</em>.
    </p>
    <table cellspacing="10" cellpadding="0">
        <tbody>
        <tr>
            <td height="74" width="74">
                <a href="{{ url('core_user_show', { 'username':row.invitation.team.usernameCanonical }) }}"  style="color: #333;">
                    <img src="{{ (row.invitation.team.avatar is empty ? 'avatar.png' : row.invitation.team.avatar.webPath)|imagine_filter('64x64o') }}" width="64" height="64" style="border: 1px solid #ccc; background-color: #fff; padding: 4px;" alt="{{ row.invitation.team.displayname }}">
                </a>
            </td>
            <td>
                <a href="{{ url('core_user_show', { 'username':row.invitation.team.usernameCanonical }) }}" style="font-size: 130%; font-weight: bold; color: #f77f00; text-decoration: none;">{{ row.invitation.team.displayname }}</a>{% if row.invitation.team.fullname is not empty %}&nbsp;<span style="color: #999; font-size: 90%;">({{ row.invitation.team.fullname }})</span>{% endif %}
                {% if row.invitation.team.location is not empty %}
                    <p style="margin:5px 0 0 0; font-size: 90%"><a href="https://maps.google.fr/maps?q={{ row.invitation.team.location|url_encode }}" style="color: #f77f00; text-decoration: none;">{{ row.invitation.team.location }}</a></p>
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}