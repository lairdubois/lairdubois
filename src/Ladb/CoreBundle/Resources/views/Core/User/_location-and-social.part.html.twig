{# set user #}
{# set noMicrodata (facultative) #}

{% set noMicrodata = noMicrodata|default(false) %}

{% if user.location %}<span class="ladb-subblock"><i class="ladb-icon-location"></i> <a href="https://maps.google.fr/maps?q={{ user.location|url_encode }}" target="_blank" rel="noreferrer noopener"><span{% if not noMicrodata %} itemprop="homeLocation"{% endif %}>{{ user.location }}</span></a></span> {% endif %}
{% if user.meta.website %}<span class="ladb-subblock"><i class="ladb-icon-globe"></i> <a href="{{ user.meta.website }}"{% if not noMicrodata %} target="_blank" rel="noreferrer noopener" itemprop="sameAs"{% endif %}>{{ user.meta.website|ladb_url_truncate(true, 30, 0) }}</a></span> {% endif %}
<span class="ladb-subblock">
    {% if user.meta.facebook %}<a href="https://www.facebook.com/{{ user.meta.facebook }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Facebook"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-facebook-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.meta.twitter %}<a href="https://twitter.com/{{ user.meta.twitter }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Twitter"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-twitter-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.meta.youtube %}<a href="https://www.youtube.com/channel/{{ user.meta.youtube }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur YouTube"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-youtube-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.meta.vimeo %}<a href="https://vimeo.com/{{ user.meta.vimeo }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Vimeo"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-vimeo-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.meta.dailymotion %}<a href="https://www.dailymotion.com/{{ user.meta.dailymotion }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Dailymotion"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-dailymotion-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.meta.pinterest %}<a href="http://pinterest.com/{{ user.meta.pinterest }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Pinterest"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-pinterest-square ladb-icon-lg"></i></a> {% endif %}
    {% if user.meta.instagram %}<a href="http://instagram.com/{{ user.meta.instagram }}" target="_blank" rel="noreferrer noopener" data-tooltip="tooltip" title="Retrouvez {{ user.displayname }} sur Instagram"{% if not noMicrodata %} itemprop="sameAs"{% endif %}><i class="ladb-icon-instagram-square ladb-icon-lg"></i></a> {% endif %}
</span>