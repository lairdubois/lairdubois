{% extends 'LadbCoreBundle:Core/Search:_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.users'|trans() %}
{% set searchPath = path('core_user_list') %}
{% set mapSearchPath = path('core_user_list_geojson') %}

{% block filtersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="skill" data-label="Compétence" data-editable="true" data-icon="skill" data-proposals-url="{{ path('core_search_typeahead_input_skills_json')|raw }}"><i class="ladb-icon-skill"></i> Compétence</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="around" data-label="Autour de moi" data-editable="false" data-unique="true" data-geolocation="true" data-require-map="true" data-icon="geolocate"><i class="ladb-icon-geolocate ladb-icon-fixed-center"></i> Autour de moi</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="location" data-label="Localisation" data-editable="true" data-require-map="true" data-icon="location"><i class="ladb-icon-location ladb-icon-fixed-center"></i> Localisation</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="account-type" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Core\\User::ACCOUNT_TYPE_HOBBYIST') }}" data-label="Passionné-e-s<span class='ladb-hidden-mobile'> par le travail du bois</span>" data-editable="false" data-unique="true" data-icon="badge-hobbyist"><i class="ladb-icon-badge-hobbyist"></i> Passionné-e-s<span class='ladb-hidden-mobile'> par le travail du bois</span></a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="account-type" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Core\\User::ACCOUNT_TYPE_PRO') }}" data-label="Professionnel-le-s<span class='ladb-hidden-mobile'> des métiers du bois</span>" data-editable="false" data-unique="true" data-icon="badge-pro"><i class="ladb-icon-badge-pro"></i> Professionnel-le-s<span class='ladb-hidden-mobile'> des métiers du bois</span></a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="account-type" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Core\\User::ACCOUNT_TYPE_ASSO') }}" data-label="Associations<span class='ladb-hidden-mobile'> ou un collectifs</span>" data-editable="false" data-unique="true" data-icon="badge-asso"><i class="ladb-icon-badge-asso"></i> Associations<span class='ladb-hidden-mobile'> ou un collectifs</span></a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="account-type" data-value="{{ constant('Ladb\\CoreBundle\\Entity\\Core\\User::ACCOUNT_TYPE_BRAND') }}" data-label="Marques" data-editable="false" data-unique="true" data-icon="badge-brand"><i class="ladb-icon-badge-brand"></i> Marques</a></li>
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récents" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récents</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-followers" data-label="Plus suivis" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus suivis</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférés" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférés</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
{% endblock %}

{% block searchboxShortcutsOuter %}{% endblock %}